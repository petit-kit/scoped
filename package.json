{
  "name": "@petit-kit/scoped",
  "version": "0.0.5",
  "description": "A lightweight, reactive web component framework with built-in plugins for modern web development.",
  "keywords": [
    "web-components",
    "custom-elements",
    "reactive",
    "framework-agnostic",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/petit-kit/scoped"
  },
  "bugs": {
    "url": "https://github.com/petit-kit/scoped/issues"
  },
  "homepage": "https://github.com/petit-kit/scoped",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm run format && rollup -c && npm run build:types",
    "build:types": "tsc -p tsconfig.declarations.json",
    "dev": "rollup -c -w",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "publish": "pnpm build && pnpm publish --access public"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.0.0",
    "prettier": "^3.8.1",
    "rollup": "^4.28.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@petit-kit/animate": "^0.0.1"
  }
}

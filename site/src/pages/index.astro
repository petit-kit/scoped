---
import { Font } from 'astro:assets';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=yes, viewport-fit=cover"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Scoped</title>
    <meta
      name="description"
      content="A lightweight, framework-agnostic library for building web components with reactive state, bindings, lifecycle hooks, template-based rendering and plugins."
    />
    <Font cssVariable="--font-poppins" preload={true} />
  </head>
  <body>
    <div
      class="flex flex-col justify-center items-center min-h-[95vh] w-screen"
    >
      <c-logo></c-logo>

      <br />

      <div class="max-w-[900px] text-pretty sub-title mt-10 px-5 !leading-none">
        A <strong>lightweight</strong>, <strong>framework-agnostic</strong> library
        for building web components with <strong>reactive state</strong>, <strong
          >bindings</strong
        >, <strong>lifecycle hooks</strong>,
        <strong>template-based rendering</strong> and <strong>plugins</strong>.
      </div>

      <br />
      <br />

      <code>
        <strong>4.1 kb</strong> gzipped - <strong>12.7 kb</strong> minified
      </code>
    </div>

    <div class="text-content-narrow flex flex-row gap-10 mx-auto">
      <aside class="sticky top-5 self-start shrink-0 hidden xl:block">
        <c-table-content></c-table-content>
      </aside>
      <c-content></c-content>
    </div>

    <link
      rel="stylesheet"
      href="https://unpkg.com/@highlightjs/cdn-assets/styles/github.css"
    />
  </body>
</html>

<script>
  import '../components/c-logo.ts';
  import '../components/c-table-content.ts';
  import '../components/c-content.ts';
  import hljs from 'highlight.js/lib/core';

  import typescript from 'highlight.js/lib/languages/typescript';
  import bash from 'highlight.js/lib/languages/bash';
  import javascript from 'highlight.js/lib/languages/javascript';

  hljs.registerLanguage('typescript', typescript);
  hljs.registerLanguage('javascript', javascript);
  hljs.registerLanguage('bash', bash);

  hljs.configure({
    languages: ['typescript', 'ts', 'javascript', 'js', 'bash', 'sh'],
    ignoreUnescapedHTML: true,
    cssSelector: 'pre code',
  });

  hljs.highlightAll();
</script>
